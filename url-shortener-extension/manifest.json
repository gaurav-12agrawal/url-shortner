{
"manifest_version": 3,
"name": "zipIt",
"version": "1.0",
"description": "Shortens current URL and copies it",
"permissions": ["activeTab", "scripting", "clipboardWrite"],
"host_permissions": ["https://zipnow.onrender.com/*"],
"icons": {
"16": "icon.png",
"48": "icon.png",
"128": "icon.png"
},
"action": {
"default_popup": "popup.html",
"default_title": "zipIt",
"default_icon": {
"16": "icon.png",
"48": "icon.png",
"128": "icon.png"
}
}
}